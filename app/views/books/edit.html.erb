<!--編集画面-->
<h2>Editing Book</h2>
<!--editアクションで探してきたデータ表示中身が入ってるからupdate処理してくれる？-->
<%= form_with model: @book do |f| %>


  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit 'Update Book' %>
  
<% end %>


<!--詳細画面と一覧画面-->
<p><%= link_to "Show" , book_path %> | 
   <%= link_to "Back" , books_path %>
</p>


