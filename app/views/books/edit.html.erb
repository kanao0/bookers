<!--編集画面-->
<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="form">
  <!--editアクションで探してきたデータ表示中身が入ってるから自動的にupdate処理ね！-->
  <%= form_with model: @book do |f| %>
  
  
    <div class="form-title">Title</div>
    <%= f.text_field :title %>
    
    <div class="form-body">Body</div>
    <%= f.text_area :body %>
    
    <div class="form-send"><%= f.submit 'Update Book' %></div>
    
  <% end %>
</div>  
  
  <!--詳細画面と一覧画面-->
