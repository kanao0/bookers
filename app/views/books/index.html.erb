<h3>New book</h3>
<!-- form_with部分 -->
<!--< form_with model: Book.new do |f| %!>-->
<%= form_with model: @book, url: '/books/index', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>






