<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
 
  <!--データを出す-->
<% @books.each do |book| %>   
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      showeditの
    </tr>
    <% end %>
  </tbody>
</table>




<!--↑一覧-->
<!--↓投稿-->
<h3>New book</h3>
<!-- form_with部分 -->
<!--投稿できる-->
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<!--<!%= form_with model: @book do |f| %>-->

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>


